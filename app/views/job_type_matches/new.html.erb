<!-- Validation failure messages -->
<% if @job_type_match.errors.any? %>
  <% @job_type_match.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Job Type Match</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_job_type_match" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for candidate_id -->
      <!--<div class="form-group">-->
      <!--  <label for="candidate_id" class="control-label">-->
      <!--    Candidate-->
      <!--  </label>-->

      <!--  <input type="text" id="candidate_id" name="candidate_id" placeholder="Candidate" class="form-control" value="<%= @job_type_match.candidate_id %>">-->
      <!--</div>-->

      <!-- Label and input for job_type_id -->
      <div class="form-group">
        <label for="job_type_id" class="control-label">
          Job type
        </label>
        
        <%= select_tag("job_type_id", options_from_collection_for_select(JobType.all, :id, :name, :description), :class => "form-control") %>
        <!--<input type="text" id="job_type_id" name="job_type_id" placeholder="Job type" class="form-control" value="<%= @job_type_match.job_type_id %>">-->
      </div>

      <button class="btn btn-success">
        Create Job Type Match
      </button>
      or
      <a href="/job_type_matches">Cancel</a>
    </form>
  </div>
</div>
