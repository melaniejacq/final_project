<div class="page-header">
  <h3><%= @company.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt></dt>
      <dd><img src="<%= @company.logo %>" width="320"></dd>

      <!--<dt>Company Name</dt>-->
      <!--<dd><%= @company.name %></dd>-->

      <dt>Hq address</dt>
      <dd><%= @company.hq_address %></dd>

      <dt>Industry</dt>
      <dd><%= @company.industry.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/companies" class="btn btn-primary">
        Back
      </a>
      <a href="/companies/<%= @company.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_company/<%= @company.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
