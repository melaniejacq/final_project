<!-- Validation failure messages -->
<% if @application.errors.any? %>
  <% @application.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Application</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_application" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for match_id -->
      <div class="form-group">
        <label for="match_id" class="control-label">
          Match
        </label>

        <input type="text" id="match_id" name="match_id" placeholder="Match" class="form-control" value="<%= @application.match_id %>">
      </div>

      <button class="btn btn-success">
        Create Application
      </button>
      or
      <a href="/applications">Cancel</a>
    </form>
  </div>
</div>
