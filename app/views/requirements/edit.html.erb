<!-- Validation failure messages -->
<% if @requirement.errors.any? %>
  <% @requirement.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Requirement #<%= @requirement.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_requirement/<%= @requirement.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for job_id -->
      <div class="form-group">
        <label for="job_id" class="control-label">
          Job
        </label>

        <input type="text" id="job_id" name="job_id" placeholder="Job" class="form-control" value="<%= @requirement.job_id %>">
      </div>

      <!-- Label and input for skill_id -->
      <div class="form-group">
        <label for="skill_id" class="control-label">
          Skill
        </label>

        <input type="text" id="skill_id" name="skill_id" placeholder="Skill" class="form-control" value="<%= @requirement.skill_id %>">
      </div>

      <!-- Label and input for use_case -->
      <div class="form-group">
        <label for="use_case" class="control-label">
          Use case
        </label>

        <textarea id="use_case" name="use_case" placeholder="Use case" class="form-control" rows="3"><%= @requirement.use_case %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Requirement
      </button>
      or
      <a href="/requirements/<%= @requirement.id %>">Cancel</a>
    </form>
  </div>
</div>
