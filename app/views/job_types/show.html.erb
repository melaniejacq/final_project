<div class="page-header">
  <h3>Job Type #<%= @job_type.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Job Type</dt>
      <dd><%= @job_type.name %></dd>

    </dl>
    
    <dl class="dl-horizontal">
      <dt>Description</dt>
      <dd><%= @job_type.description %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/job_types" class="btn btn-primary">
        Back
      </a>
      <a href="/job_types/<%= @job_type.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_job_type/<%= @job_type.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
