<div class="page-header">
  <h1>
    Industry preferences
    <a href="/industry_preferences/new" class="btn btn-lg btn-success">New Industry preference</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Candidate</th>
        <th>Industry</th>
        <th>Classification</th>
        <th>Actions</th>
      </tr>

      <% @industry_preferences.each do |industry_preference| %>
      <tr>
        <td><%= industry_preference.candidate_id %></td>
        <td><%= industry_preference.industry_id %></td>
        <td><%= industry_preference.classification %></td>
        <td>
          <a href="/industry_preferences/<%= industry_preference.id %>" class="btn btn-primary">Show</a>
          <a href="/industry_preferences/<%= industry_preference.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_industry_preference/<%= industry_preference.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
