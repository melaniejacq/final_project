<div class="page-header">
  <h1>
    Features
    <a href="/features/new" class="btn btn-lg btn-success">New Feature</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Job</th>
        <th>Attribute</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @features.each do |feature| %>
      <tr>
        <td><%= feature.job_id %></td>
        <td><%= feature.attribute_id %></td>
        <td><%= feature.description %></td>
        <td>
          <a href="/features/<%= feature.id %>" class="btn btn-primary">Show</a>
          <a href="/features/<%= feature.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_feature/<%= feature.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
