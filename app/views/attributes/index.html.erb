<div class="page-header">
  <h1>
    Attributes
    <a href="/attributes/new" class="btn btn-lg btn-success">New Attribute</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @attributes.each do |attribute| %>
      <tr>
        <td><%= attribute.name %></td>
        <td><%= attribute.description %></td>
        <td>
          <a href="/attributes/<%= attribute.id %>" class="btn btn-primary">Show</a>
          <a href="/attributes/<%= attribute.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_attribute/<%= attribute.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
