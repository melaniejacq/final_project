<div class="page-header">
  <h3>Attribute #<%= @attribute.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @attribute.name %></dd>

      <dt>Description</dt>
      <dd><%= @attribute.description %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/attributes" class="btn btn-primary">
        Back
      </a>
      <a href="/attributes/<%= @attribute.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_attribute/<%= @attribute.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
