<div class="page-header">
  <h3>Superpower : <%= @superpower.skill.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Skill</dt>
      <dd><%= @superpower.skill.name %></dd>

      <dt>Story</dt>
      <dd><%= @superpower.story %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/superpowers" class="btn btn-primary">
        Back
      </a>
      <a href="/superpowers/<%= @superpower.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_superpower/<%= @superpower.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
