<div class="page-header">
  <h1>
    Superpowers
    <a href="/superpowers/new" class="btn btn-lg btn-success">New Superpower</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Skill</th>
        <th>Story</th>
        <th>Actions</th>
      </tr>

      <% @superpowers.each do |superpower| %>
      <tr>
        <td><%= superpower.skill.name %></td>
        <td><%= superpower.story %></td>
        <td>
          <!--<a href="/superpowers/<%= superpower.id %>" class="btn btn-primary">Show</a>-->
          <a href="/superpowers/<%= superpower.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_superpower/<%= superpower.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
